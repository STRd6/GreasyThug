{
  "name": "Greasy Thug",
  "version": "0.0.1",
  "description": "I've been called a greasy thug, too. It never stops hurting. So here's what we're gonna do: We're gonna grease ourselves up real good and trash that place with a baseball bat. - Homer",
  "icons": {
    "48": "images/blimpy_48x48.png",
    "128": "images/blimpy_128x128.png"
  },
  
  "browser_action": {
    "default_title": "Greasy Thug",
    "default_icon": "images/icon.png"
  },

  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "css": [
        "stylesheets/dark-hive/jquery-ui-1.8rc2.custom.css",
        "stylesheets/console.css"
      ],
      "js": [
        "javascripts/jquery-1.4.2.min.js",
        "javascripts/jquery-ui-1.8rc2.custom.min.js",
        "javascripts/thug/command_history.js",
        "javascripts/thug/scorpio.js",
        "javascripts/thug/console.js",
        "javascripts/page.js"
      ]
    }
  ],

  "permissions": [
    "tabs"
  ],
  
  "background_page": "background.html",
  "options_page": "options.html"
}
